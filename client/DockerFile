# Client Dockerfile - Vite React için
FROM node:18-alpine as builder

# Çalışma dizini
WORKDIR /app

# Package dosyalarını kopyala
COPY package*.json ./

# Dependencies yükle
RUN npm install

# Kaynak kodları kopyala
COPY . .

# Vite build et
RUN npm run build

# Nginx stage
FROM nginx:alpine

# Build dosyalarını kopyala (Vite dist klasörü kullanır)
COPY --from=builder /app/dist /usr/share/nginx/html

# Nginx yapılandırması
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Port expose et
EXPOSE 80

# Nginx başlat
CMD ["nginx", "-g", "daemon off;"]